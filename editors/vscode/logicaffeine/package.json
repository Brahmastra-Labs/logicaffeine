{
  "name": "logicaffeine",
  "displayName": "LogicAffeine",
  "description": "Language support for LogicAffeine (.lg files)",
  "version": "0.8.0",
  "publisher": "brahmastra-labs",
  "repository": {
    "type": "git",
    "url": "https://github.com/Brahmastra-Labs/logicaffeine"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:logicaffeine"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "logicaffeine",
        "aliases": [
          "LogicAffeine",
          "logicaffeine",
          "lg"
        ],
        "extensions": [
          ".lg"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "logicaffeine",
        "scopeName": "source.logicaffeine",
        "path": "./syntaxes/logicaffeine.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "LogicAffeine",
      "properties": {
        "logicaffeine.lsp.path": {
          "type": "string",
          "default": "logicaffeine-lsp",
          "description": "Path to the logicaffeine-lsp binary"
        },
        "logicaffeine.lsp.args": {
          "type": "array",
          "default": [
            "--stdio"
          ],
          "description": "Arguments passed to the LSP server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.75.0",
    "typescript": "^5.3.0"
  }
}
